# Internal container registry (behind VPN)
image:
  repository: dprusocplvjmp01.deepsky.lab:5000/gastown-operator
  pullPolicy: IfNotPresent
  # tag: ""  # Uses Chart.appVersion by default

# Registry credentials (the secret must exist in the namespace)
# Create with:
#   kubectl create secret docker-registry dpr-registry-credentials \
#     --docker-server=dprusocplvjmp01.deepsky.lab:5000 \
#     --docker-username=<user> \
#     --docker-password=<password> \
#     -n gastown-system
imagePullSecrets:
  - name: dpr-registry-credentials

